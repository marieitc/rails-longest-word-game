<div class="m-4">
  <h1>New Game</h1>
  <div>
    <ul class = "list-unstyled d-flex">
    <%@letters.each do |letter|%>
    <li class="m-2 p-4 border-secondary text-center" style="background-color: #3279b7; color: white; font-weight: 600; width: 60px; heigth: 50px;"><%=letter%></li>
    <%end%>
    </ul>
  </div>
  <div>
    <p>What is the longest word you can find?</p>
    <form action="/score" method="post" data-turbo="false">
      <input type="text" name="word">
      <input type="submit" value="Play">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
       <%= hidden_field_tag :letters, @letters %>
    </form>
  </div>
</div>
